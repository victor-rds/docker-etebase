{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:all"
    ],
    "enabledManagers": [
        "regex",
        "dockerfile",
        "github-actions"
    ],
    "excludeCommitPaths": ["vendor/golang.org/x/text/**"],
    "major": {
        "dependencyDashboardApproval": true
    },
    "regexManagers": [
        {
            "fileMatch": [
                "^server_version$"
            ],
            "matchStrings": ["export ETESYNC_VERSION=(?<currentValue>.*?)"],
            "depNameTemplate": "etesync/server",
            "datasourceTemplate": "github-tags",
            "versioningTemplate": "semver-coerced"    
        }
    ],
    "pinDigests": false
}